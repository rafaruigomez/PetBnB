<div class="container">
  <br>
  <div class="row justify-content-center">
    <div class="col-10 col-xs-8 col-md-8 col-lg-6 col-xl-5">
      <%= link_to "Go Back", :back, class: "btn btn-primary" %>
      <div class="main shadow">
      <h2 class="text-center mb-4">Forgot your password?</h2>
        <div class="col-12 form-group">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Forgot Password", class: 'btn btn-primary' %>
            </div>
            <br>
            <div class="d-flex">
              <%= link_to "Log in", new_user_session_path %>
              <%= link_to "Sign up", new_user_registration_path, class: "ml-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
