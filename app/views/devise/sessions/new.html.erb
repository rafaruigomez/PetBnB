<div class="container">
  <br>
  <div class="row justify-content-center">
    <div class="col-10 col-xs-8 col-md-8 col-lg-6 col-xl-5">
      <%= link_to "← Back", :back %>
      <div class="main shadow">
      <h2 class="text-center">Log in</h2>
        <div class="col-12 form-group">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="d-flex justify-content-between">
              <div class="form-actions w-100">
              <%= f.button :submit, "Log in", class: 'btn btn-primary w-100' %>
              </div>
            </div>
          <% end %>
          <br>
          <div class="text-center">
            <a class="text-center" href="/users/password/new">Forgot your password?</a>
            <p class="text-center m-0">No account? <%= link_to "Sign up", new_user_registration_path %></p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>



