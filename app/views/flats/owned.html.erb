<div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('https://res.cloudinary.com/rafxss/image/upload/v1599601770/il_1588xN.1672457821_8zt7_vlfqwf.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center;">
  <div class="container text-center text-white shadow-sm">
    <div style="padding: 75px 0px;">
      <h1 style="align-content: center; text-shadow: 2px 2px 10px #000000;">My flats</h1>

    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="justify-content-center">
    <% if current_user%>
    <div class="mb-3 mr-auto ml-auto" style="max-width: 600px;">
      <div>
        <div class="justify-content-center">
          <%= link_to 'Create a flat', new_flat_path, class: 'btn btn-pet-outline' %>
        </div>
      </div>
    </div>
    <% end %>
  <% if @owned_flats.empty? %>
    <h1 class="text-center"style="align-content: center;">You dont own any flats ðŸ˜…</h1>
  <% else %>
  <div class="justify-content-center">
    <% @owned_flats.each do |flat| %>
    <div class="card mb-3 mr-auto ml-auto" style="max-width: 600px; border-radius: 15px;">
      <%= link_to flat_path(flat), class: "text-decoration-none color-link-none" do %>
        <div class="row no-gutters">
          <div class="col-4 col-md-4">
            <img src="<%= cl_image_path flat.photos.first.key, height: 500, width: 500, crop: :fill, class: "d-block" %>" class="card-img" alt="..." style="border-top-left-radius: 15px; border-bottom-left-radius: 15px; border-top-right-radius: 0px; border-bottom-right-radius: 0px;">
          </div>
          <div class="col-8 col-md-8">
            <div class="card-body h-100">
              <div class="d-flex flex-column align-content-between" style="height: 100%;">
                <div class="mb-auto">
                  <h5 class="card-title"><%= flat.name %></h5>
                  <p class="card-text maxlengthpet"><%= flat.description %></p>
                </div>
                <div class="d-flex justify-content-between">
                  <div class="text-muted"><i class="fas fa-map-marker-alt fa-lg mr-1" style="color:#FF5A5F"></i><span> <%= flat.location %> </span></div>
                  <div><span> <strong>  <%= flat.price %> â‚¬ </strong> / day</span></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
<% end %>
</div>
</div>
