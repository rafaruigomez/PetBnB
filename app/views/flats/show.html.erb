<div class="show">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style='height:200;'>
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
      <div class="carousel-inner" >
        <% @flat.photos.each_with_index do |flat, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <img class="d-block w-100" src="<%= cl_image_path flat.key, height: 400, width: 1200, crop: :fill, class: "d-block" %>" alt="First slide">
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>

  <div class="container mt-5">
    <div class="container">
      <h3><strong> <%= @flat.name.capitalize %>
        <% if current_user == @flat.user %>
            <%= image_tag current_user.avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <%= link_to 'Edit flat', edit_flat_path(@flat) , class: 'btn btn-primary'%>
            <%= link_to 'Delete flat', flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" } , class: 'btn btn-delete-flat' %>
          <% end %>
           </strong></h3>

        <div class="container d-flex">
          <div class="container">
            <div class="product-box">
              <h5>Flat Description:  <i class="fas fa-home"></i></h5>
              <p><%= @flat.description %></p>
            </div>
            <div class="product-box">
              <h5>Flat Addres:  <i class="fas fa-map-marked-alt"></i></h5>
                <p><%= @flat.address%>, <br> <%= @flat.location %> </p>
              <!-- <p><%= @flat.price %>$ per night.</p> -->
            </div>
          </div>



          <div class="container book-form">
            <div class="container dates product-box">
              <div class="form-group row">
                <label for="example-datetime-local-input" class="col-2 col-form-label">Start date</label>
                <div class="col-10">
                  <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input">
                </div>
              </div>
              <div class="form-group row">
                <label for="example-datetime-local-input" class="col-2 col-form-label">End date</label>
                <div class="col-10">
                  <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input">
                  <p><%=@flat.price %>$ per night.</p>
                </div>

              </div>
              <div class="text-right">
                <div>
                  <a id="book" class="btn btn-pet " type="submit">Book</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>




