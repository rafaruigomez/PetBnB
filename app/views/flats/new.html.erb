<div class="container">
  <br>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8">
      <%= link_to "Go Back", :back, class: "btn btn-primary" %>
      <div class="main">
      <h2 class="text-center">Post a new dog's house</h2>
        <div class="col-12 form-group">
          <%= simple_form_for(@flat) do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :address %>
            <%= f.input :price %>
            <%= f.input :location, collection: [['Seville', 'Seville'], ['Madrid', 'Madrid'], ['Barcelona', 'Barcelona']], label_method: :second, value_method: :first %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>

            <input type="submit" name="commit" value="Create Flat" data-disable-with="Create Flat" class="btn btn-primary">
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>

